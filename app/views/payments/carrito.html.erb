<h1><i class="fa fa-shopping-cart">
</i> Carrito de compras</h1>
<ul class="list-group">
	<% @payments.each do |payment| %>
		<li class="list-group-item">
			<div class="row">
				<div class="col-md-8"><%= payment.post.titulo %></div>
				<div class="col-md-3 text-right"><%= "#{payment.post.costo}USD" unless payment.post.costo.nil? %></div>
			</div>
			
		</li>
	<%end%>
	<li class="list-group-item">
		<div class="row">
			<div class="col-md-9">Total</div>
			<div class="col-md-2">
				<%= current_usuario.costo_compra_pendiente  %>USD
			</div>			
		</div>
	</li>
</ul>